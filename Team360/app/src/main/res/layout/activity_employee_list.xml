<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".admin_tracker.employeeList.EmployeeListActivity">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:riv_corner_radius_bottom_right="20dp"
            app:riv_corner_radius_bottom_left="20dp"
            android:background="@drawable/main_user_bg2"
            android:elevation="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Employees"
            android:elevation="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/poppins_regular"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            tools:listitem="@layout/employee_card"
            android:id="@+id/recyclerView"
            android:layout_height="match_parent"
            android:paddingTop="85dp"/>



    </FrameLayout>
</layout>